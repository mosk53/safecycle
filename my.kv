#:kivy 2.1.0
#: import SlideTransition kivy.uix.screenmanager.SlideTransition
#button Font: Open Sans / Color: #15d798

ScreenManager:
    login_screen:
    booking_screen:


<login_screen>:
    name: 'login_screen'
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20
        Image:
            source: 'logo.png'
            size_hint_y: 0.5
        BoxLayout:
            orientation: 'vertical'
            spacing: 20
            TextInput:
                id: username
                hint_text: 'Username'
                multiline: False
                padding: 20
                size_hint_y: 0.5
            TextInput:
                id: password
                hint_text: 'Password'
                multiline: False
                padding: 20
                size_hint_y: 0.5
                password: True
            Button:
                text: 'Login'
                size_hint_y: 0.5
                on_press: root.manager.current = 'main_s'
            Button:
                text: 'Register'
                size_hint_y: 0.5
                on_press: root.manager.current = 'register_screen'
        Label:
            text: 'Forgot Password?'
            size_hint_y: 0.5            

<main_screen>:
    name: 'main_s'
    MDBottomNavigation:
        MDBottomNavigationItem:
            name: 'screen 1'
            icon: 'account-hard-hat-outline'
        MDBottomNavigationItem:
            name: 'screen 2'
            text: 'Plan'
            icon: "floor-plan"
            # scatter with free movability
            Scatter:
                do_translation: True
                do_rotation: True
                do_scale: True
                # position in the center of the screen
                pos: self.parent.center 
                # size of the image
                size: 500, 500
                Image:
                    source: 'test/bild.png'
                    size: 500, 500
        MDBottomNavigationItem:
            name: 'screen 3'
            icon: "chat-outline"
            