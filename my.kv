#:kivy 2.1.0
#button Font: Open Sans / Color: #15d798

ScreenManager:
    main_screen:
    search_screen:



<main_screen>:
    name: 'main_s'
    FloatLayout:
        MDFlatButton:
            size_hint: 0.4,0.2
            padding_top: 1
            pos_hint: {'center_y':0.6, 'center_x':0.5}
            on_press: root.manager.current = 'search_s'
            Image:
                source: "/home/mosk/Desktop/code/safecycle/icons/glas.png"
                allow_stretch:True
                center_x: self.parent.center_x
                center_y: self.parent.center_y              
        MDFlatButton:
            size_hint: 0.4,0.2
            padding_top: 1
            pos_hint: {'center_y':0.3, 'center_x':0.5}
            Image:
                source: "/home/mosk/Desktop/code/safecycle/icons/rad.png"
                allow_stretch:True
                center_x: self.parent.center_x
                center_y: self.parent.center_y
<search_screen>:
    name: 'search_s'
    FloatLayout:
        MDTextField:
            size_hint: 0.8,0.05
            multiline: False
            pos_hint: {'center_y':0.5, 'center_x':0.5}
            hint_text: "Hier die ID"
            mode: "rectangle"
        MDFloatingActionButton:
            #size_hint: 0.4,0.2
            pos_hint: {'center_y':0.8, 'center_x':0.1}
            on_press: root.manager.current = "main_s"


            

